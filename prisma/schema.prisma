generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  MENTOR
  USER
}

enum TypeUser {
  PERSONAL
  COMPANY
}

model Users {
  id            String   @id @default(uuid())
  name          String
  username      String   @unique
  email         String   @unique
  password      String
  cpf           String?  @unique
  international Boolean  @default(false)
  birthdate     String?
  gender        String?
  address       String?
  number        String?
  city          String?
  complement    String?
  neighborhood  String?
  uf            String?
  zipCode       String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  avatar        String?
  phone         String   @unique
  role          Role     @default(USER)
  emailVerified Boolean  @default(false)

  certificates      Certificates[]
  courses           Courses[]
  progresses        Progress[]
  courseEnrollments CourseEnrollment[]
  notifications     Notifications[]    @relation("NotificationsUser")
  sentNotifications Notifications[]    @relation("NotificationsSendUser")
  socialLinks       SocialLinks[]
  payments          Payments[]
  ensigns           Ensigns[]

  @@map("users")
}

model SocialLinks {
  id      String @id @default(cuid())
  userId  String
  network String
  url     String
  Users   Users? @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("social_links")
}

model ResetPassword {
  id    String @id @default(cuid())
  email String
  token String @unique @default(cuid())

  @@map("reset_passwords")
}

model Courses {
  id          String   @id @default(uuid())
  title       String
  slug        String
  description String
  image       String?
  tags        String[]
  level       String   @default("beginner")
  type        String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  status      String   @default("pending")

  userId String
  user   Users  @relation(fields: [userId], references: [id], onDelete: Cascade)

  certificates     Certificates[]
  progresses       Progress[]
  courseEnrollment CourseEnrollment[]
  modules          Modules[]
  lessons          Lessons[]
  ensigns          Ensigns[]

  @@map("courses")
}

model Modules {
  id          String  @id @default(uuid())
  title       String
  slug        String
  description String
  available   String
  visibility  Boolean
  courseId    String

  lessons  Lessons[]
  progress Progress[]

  course Courses @relation(fields: [courseId], references: [id], onDelete: Cascade)

  @@map("modules")
}

model Lessons {
  id          String  @id @default(uuid())
  title       String
  slug        String
  description String
  video       String?
  cover       String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  transcription String?

  courseId  String
  moduleId  String
  materials Materials[]
  comments  Comments[]
  progress  Progress[]

  course Courses @relation(fields: [courseId], references: [id])
  module Modules @relation(fields: [moduleId], references: [id], onDelete: Cascade)

  @@map("lessons")
}

model CourseEnrollment {
  id         String   @id @default(uuid())
  userId     String
  courseId   String
  enrolledAt DateTime @default(now())

  user   Users   @relation(fields: [userId], references: [id], onDelete: Cascade)
  course Courses @relation(fields: [courseId], references: [id], onDelete: Cascade)

  @@unique([userId, courseId])
  @@map("course_enrollments")
}

model Progress {
  id        String   @id @default(uuid())
  userId    String
  courseId  String
  moduleId  String
  lessonId  String
  completed Boolean  @default(false)
  updatedAt DateTime @updatedAt

  user   Users   @relation(fields: [userId], references: [id], onDelete: Cascade)
  course Courses @relation(fields: [courseId], references: [id], onDelete: Cascade)
  module Modules @relation(fields: [moduleId], references: [id], onDelete: Cascade)
  lesson Lessons @relation(fields: [lessonId], references: [id], onDelete: Cascade)

  @@unique([userId, lessonId])
  @@map("progress")
}

model Ensigns {
  id          String   @id @default(cuid())
  userId      String
  courseId    String
  message     String
  description String
  image       String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user   Users   @relation(fields: [userId], references: [id], onDelete: Cascade)
  course Courses @relation(fields: [courseId], references: [id], onDelete: Cascade)
}

model Certificates {
  id        String   @id @default(uuid())
  courseId  String
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user   Users   @relation(fields: [userId], references: [id], onDelete: Cascade)
  course Courses @relation(fields: [courseId], references: [id], onDelete: Cascade)

  @@map("certificates")
}

model Notifications {
  id               String   @id @default(uuid())
  notificationType String
  notificationText String?
  sendUserId       String
  userId           String
  status           String   @default("unread")
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  user     Users  @relation("NotificationsUser", fields: [userId], references: [id], onDelete: Cascade)
  sendUser Users? @relation("NotificationsSendUser", fields: [sendUserId], references: [id], onDelete: Cascade)

  @@map("notifications")
}

model Comments {
  id        String   @id @default(uuid())
  lessonId  String
  userId    String
  content   String
  answer    Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  lesson Lessons @relation(fields: [lessonId], references: [id], onDelete: Cascade)

  @@map("comments")
}

model Materials {
  id          String   @id @default(uuid())
  lessonId    String
  title       String?
  description String?
  url         String
  createdAt   DateTime @default(now())

  lesson Lessons @relation(fields: [lessonId], references: [id], onDelete: Cascade)

  @@map("materials")
}

model ValidationCode {
  id    String @id @default(cuid())
  email String
  code  Int

  @@map("validation_code")
}

model Payments {
  id            String   @id @default(uuid())
  status        String   @default("pending")
  token         String
  tokenExternal String
  userId        String
  courseId      String
  paymentMethod String
  amount        Float
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user Users @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("payments")
}

model RequestSignUp {
  id        String   @id @default(cuid())
  name      String
  email     String
  phone     String
  type      TypeUser @default(PERSONAL)
  call      String?
  createdAt DateTime @default(now())

  @@map("request_signup")
}
